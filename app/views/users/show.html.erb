<div class="profile-info">
  <h1 class="profile-user-name"><%= @user.full_name %></h1>
  <%= link_to 'Edit', edit_user_path(@user), class: 'edit-button' if @user == current_user %>
  <%= @user.token if @user == current_user %>
  <h2 class="profile-user-email"><%= @user.email %></h2>
</div>

<div class="tab">
  <button class="tablinks defaultOpen" data-tab="tweet-stream">Tweets</button>
  <button class="tablinks" data-tab="user-followers">Followers</button>
  <button class="tablinks" data-tab="user-following">Following</button>
</div>

<div class="user-activity">
  <div class="tweet-stream tabcontent">
    <h2>Tweets: <span class="tweets-count"><%= @user.tweets.size %></span></h2>
    <ol>
      <% @user.tweets.each do |tweet| %>
        <%= render 'tweets/preview', tweet: tweet %>
      <% end %>
    </ol>
  </div>

  <div class="user-followers tabcontent">
    <h2>Followers: <%= @user.followers.size %></h2>
    <ol>
      <% @user.followers.each do |user| %>
        <%= render 'preview', user: user %>
      <% end %>
    </ol>
  </div>

  <div class="user-following tabcontent">
    <h2>Following: <%= @user.following.size %></h2>
    <ol>
      <% @user.following.each do |user| %>
        <%= render 'preview', user: user %>
      <% end %>
    </ol>
  </div>
</div>
